<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :link %><br>
    <%= f.text_field :link %>
  </div>
  <div class="field">
    <%= f.label :refer %><br>
    <%= f.text_field :refer %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br>
    <%= select_tag "post[category_id]", options_from_collection_for_select(@category, "id", "name") %>
  </div>
  <div class="field">
    <%= f.label :excerpt %><br>
    <%= f.text_field :excerpt, :maxlength => 140 %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= check_box("post", "status", {}, 1, 0) %>
  </div>
  <div class="field">
    <%= f.label :parent %><br>
    <%= f.number_field :parent %>
  </div>
  <div class="field">
    <%= f.label :post_type %><br>
    <%= select_tag "post_type", options_from_collection_for_select(@post_type, "id", "name") %>
  </div>
  <div class="field">
    <%= f.label :comment_status %><br>
    <%= check_box("post", "comment_status", {}, 1, 0) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
