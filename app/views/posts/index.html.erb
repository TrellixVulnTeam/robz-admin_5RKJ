

    <% @posts.each do |post| %>
      <article>
        <h1 class="title-link"><small><%= post.name %></small><%= link_to post.title, post.link, :target => "_blank" %></h1>
        
        <td><%= post.status %></td>
        <td><%= post.post_type %></td>
        <td><%= post.comment_status %></td>
        <%= link_to '', post, :class => "icon-eye-open" %>
        <%= link_to '', edit_post_path(post), :class => "icon-edit" %>
        <%= link_to '', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => "icon-trash" %>
      </article>
    <% end %>



